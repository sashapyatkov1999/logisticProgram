<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="LIST_DOCS_001" author="pyatkov_aa">

        <preConditions>
            <not>
                <sequenceExists sequenceName="LIST_DOCS_SEQ"/>
            </not>
        </preConditions>
        <createSequence sequenceName="LIST_DOCS_SEQ" startValue="0"/>
    </changeSet>

    <changeSet id="LIST_DOCS_002" author="pyatkov_aa">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="LIST_DOCS"/>
            </not>
        </preConditions>



        <createTable schemaName="REPOSITORY" tableName="LIST_DOCS">

            <column name="LIST_DOCS_ID" type="INT" defaultValueSequenceNext="LIST_DOCS_SEQ">
                <constraints primaryKey="true" primaryKeyName="LIST_DOCS_PK"/>
            </column>

            <column name="POINT_ID" type="INT">
                <constraints  nullable="false"/>
            </column>

            <column name="APPLICATION_ID" type="INT">
                <constraints  nullable="false"/>
            </column>

            <column name="TYPE_DOCS_ID" type="INT">
                <constraints  nullable="false"/>
            </column>

            <column name="CREATED_AT" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints  nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints  nullable="false"/>
            </column>

        </createTable>

    </changeSet>
</databaseChangeLog>