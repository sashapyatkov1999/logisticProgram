<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">


    <changeSet id="USER-001" author="vyushin_aa">

        <preConditions>
            <not>
                <sequenceExists schemaName="REPOSITORY" sequenceName="USERS_SEQ" />
            </not>
        </preConditions>

        <createSequence schemaName="REPOSITORY" sequenceName="USERS_SEQ" startValue="0"/>

    </changeSet>


    <changeSet id="USER-002" author="vyushin_aa">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="USERS"/>
            </not>
        </preConditions>

        <createTable schemaName="REPOSITORY"  tableName="USERS">
            <column name="USER_ID" type="INT" defaultValueSequenceNext="USERS_SEQ">
                <constraints primaryKey="true" primaryKeyName="USERS_PK"/>
            </column>

            <column name="LOGIN" type="VARCHAR(25)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="PASSWORD" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>

            <column name="USER_STATUS_ID" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="NAME" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="SURNAME" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="EMAIL" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="PHONE_NUMBER" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>




</databaseChangeLog>