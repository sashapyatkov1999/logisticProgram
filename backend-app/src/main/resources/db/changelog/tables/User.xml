<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">
    
    <changeSet id="USER_001" author="pyatkov_aa">

        <preConditions>
            <not>
                <sequenceExists sequenceName="USERS_SEQ"/>
            </not>
        </preConditions>
        <createSequence sequenceName="USERS_SEQ" startValue="0" minValue="0"/>
    </changeSet>

    <changeSet id="USER_002" author="pyatkov_aa">

        <preConditions>
            <not>
                <tableExists schemaName="REPOSITORY" tableName="USERS"/>
            </not>
        </preConditions>

        <createTable schemaName="REPOSITORY" tableName="USERS">
            
            <column name="USER_ID" type="INT" defaultValueSequenceNext="USERS_SEQ">
                <constraints primaryKey="true" primaryKeyName="USER_PK"/>
            </column>
            
            <column name="LOGIN" type="VARCHAR(25)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="PASSWORD" type="VARCHAR(60)">
                <constraints  nullable="false"/>
            </column>

            <column name="USER_STATUS_ID" type="INT">
                <constraints  nullable="false"/>
            </column>

            <column name="NAME" type="VARCHAR(50)">
                <constraints  nullable="false"/>
            </column>

            <column name="SURNAME" type="VARCHAR(50)">
                <constraints  nullable="false"/>
            </column>

            <column name="E_MAIL" type="VARCHAR(50)">
                <constraints  nullable="false" unique="true"/>
            </column>

            <column name="PHONE_NUMBER" type="VARCHAR(50)">
                <constraints  nullable="false" unique="true"/>
            </column>

            <column name="CREATED" type="TIMESTAMP" defaultValue="NOW()">
                <constraints  nullable="false"/>
            </column>

            <column name="MODIFIED" type="TIMESTAMP" defaultValue="NOW()">
                <constraints  nullable="false"/>
            </column>


            
        </createTable>

    </changeSet>
</databaseChangeLog>